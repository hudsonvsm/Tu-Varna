@model IEnumerable<Pharmacy.WebApp.Models.Medicine>
@using System.Linq;

@{
    ViewBag.Title = "TopTenMostSoldMedicines";
}

<h2>TopTenMostSoldMedicines</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableQuantity)
        </th>
        <th>
            Delivered Quantity
        </th>
        <th>
            Sold Quantity
        </th>
        <th>
            <a href="@ViewBag.CsvString" target="_blank" download="Export.csv" class="btn btn-info">Export</a>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AvailableQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveredMedicineCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoldMedicineCount)
        </td>
        <td></td>
    </tr>
}

</table>
