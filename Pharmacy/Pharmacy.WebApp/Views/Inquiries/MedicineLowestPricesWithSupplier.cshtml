@model IEnumerable<Pharmacy.WebApp.Models.Medicine>

@{
    ViewBag.Title = "MedicineLowestPricesWithSupplier";
}

<h2>MedicineLowestPricesWithSupplier</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableQuantity)
        </th>
        <th>
            Cheapest Price
        </th>
        <th>
            Supplier
        </th>
        <th>
            <a href="@ViewBag.CsvString" target="_blank" download="Export.csv" class="btn btn-info">Export</a>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AvailableQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheapestDelivered)
        </td>
        <td>@Html.DisplayFor(modelItem => item.CheapestDeliveredSupplier)</td>
        <td></td>
    </tr>
}

</table>
